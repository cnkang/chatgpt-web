{
  "name": "@chatgpt-web/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "ChatGPT Web Backend API Service",
  "author": "Kang Liu",
  "contributors": [
    "ChenZhaoYu <chenzhaoyu1994@gmail.com>"
  ],
  "keywords": [
    "chatgpt-web",
    "chatgpt",
    "chatbot",
    "express"
  ],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "main": "build/index.js",
  "scripts": {
    "start": "esno ./src/index.ts",
    "dev": "esno watch ./src/index.ts",
    "dev:debug": "esno watch --inspect=0.0.0.0:9229 ./src/index.ts",
    "dev:inspect": "esno watch --inspect-brk=0.0.0.0:9229 ./src/index.ts",
    "prod": "node ./build/index.js",
    "build": "pnpm clean && tsup",
    "build:watch": "pnpm clean && tsup --watch",
    "clean": "node -e \"const fs=require('node:fs'); fs.rmSync('build',{recursive:true,force:true});\"",
    "test": "vitest --run",
    "test:integration": "vitest --run src/test/integration",
    "test:performance": "node -e \"const fs=require('fs'); fs.mkdirSync('performance-results',{recursive:true}); fs.writeFileSync('performance-results/summary.json', JSON.stringify({status:'skipped', reason:'Performance tests not implemented in repo'}, null, 2)); console.log('Performance tests skipped: placeholder results generated');\"",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "quality": "pnpm run type-check && pnpm run lint && pnpm run format:check",
    "quality:fix": "pnpm run lint:fix && pnpm run format && pnpm run type-check",
    "validate-cleanup": "esno ./src/validation/run-cleanup-validation.ts",
    "common:cleanup": "node -e \"const fs=require('node:fs'); fs.rmSync('node_modules',{recursive:true,force:true}); fs.rmSync('pnpm-lock.yaml',{force:true});\""
  },
  "dependencies": {
    "@chatgpt-web/shared": "workspace:*",
    "connect-redis": "^9.0.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "helmet": "^8.1.0",
    "openai": "^6.16.0",
    "redis": "^5.11.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/node": "^25.3.0",
    "@vitest/ui": "^4.0.18",
    "esno": "^4.8.0",
    "fast-check": "^4.5.3",
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  }
}
