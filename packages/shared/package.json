{
  "name": "@chatgpt-web/shared",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Shared utilities and types for ChatGPT Web",
  "repository": {
    "type": "git",
    "url": "https://github.com/chatgpt-web/chatgpt-web.git",
    "directory": "packages/shared"
  },
  "keywords": [
    "chatgpt",
    "shared",
    "utilities",
    "types",
    "validation",
    "monorepo"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo 'No tests in shared package'",
    "test:integration": "echo 'No integration tests in shared package'",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "quality": "pnpm run type-check && pnpm run lint && pnpm run format:check",
    "quality:fix": "pnpm run lint:fix && pnpm run format && pnpm run type-check",
    "clean": "node -e \"const fs=require('node:fs'); fs.rmSync('dist',{recursive:true,force:true});\""
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
