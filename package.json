{
  "name": "chatgpt-web",
  "type": "module",
  "version": "2.11.1",
  "private": true,
  "packageManager": "pnpm@10.28.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "description": "ChatGPT Web - Monorepo",
  "author": "Kang Liu",
  "contributors": [
    "ChenZhaoYu <chenzhaoyu1994@gmail.com>"
  ],
  "keywords": [
    "chatgpt-web",
    "chatgpt",
    "chatbot",
    "vue",
    "monorepo"
  ],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:core": "turbo run dev --filter=@chatgpt-web/web --filter=@chatgpt-web/api",
    "dev:web": "turbo run dev --filter=@chatgpt-web/web",
    "dev:api": "turbo run dev --filter=@chatgpt-web/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@chatgpt-web/web",
    "build:api": "turbo run build --filter=@chatgpt-web/api",
    "preview": "turbo run preview --filter=@chatgpt-web/web",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "turbo run quality",
    "quality:fix": "turbo run quality:fix",
    "test": "turbo run test",
    "bootstrap": "pnpm install && pnpm run common:prepare",
    "common:cleanup": "rimraf node_modules && rimraf pnpm-lock.yaml",
    "common:prepare": "husky install",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "turbo": "^2.4.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
