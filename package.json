{
  "name": "chatgpt-web",
  "type": "module",
  "version": "2.11.1",
  "private": true,
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "description": "ChatGPT Web - Monorepo",
  "author": "Kang Liu",
  "contributors": [
    "ChenZhaoYu <chenzhaoyu1994@gmail.com>"
  ],
  "keywords": [
    "chatgpt-web",
    "chatgpt",
    "chatbot",
    "vue",
    "monorepo"
  ],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:core": "turbo run dev --filter=@chatgpt-web/web --filter=@chatgpt-web/api",
    "dev:web": "turbo run dev --filter=@chatgpt-web/web",
    "dev:api": "turbo run dev --filter=@chatgpt-web/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@chatgpt-web/web",
    "build:api": "turbo run build --filter=@chatgpt-web/api",
    "preview": "turbo run preview --filter=@chatgpt-web/web",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "turbo run quality",
    "quality:fix": "turbo run quality:fix",
    "test": "turbo run test",
    "bootstrap": "pnpm install && pnpm run common:prepare",
    "common:cleanup": "rimraf node_modules && rimraf pnpm-lock.yaml",
    "common:prepare": "husky install",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.3.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "lodash@<4.17.23": "4.17.23",
      "lodash-es@<4.17.23": "4.17.23",
      "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.0",
      "node-domexception": "npm:domexception@^4.0.0",
      "source-map": "^0.7.4"
    }
  }
}
