{
  "name": "chatgpt-web",
  "type": "module",
  "version": "2.11.1",
  "private": true,
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "description": "ChatGPT Web - Monorepo",
  "author": "Kang Liu",
  "contributors": [
    "ChenZhaoYu <chenzhaoyu1994@gmail.com>"
  ],
  "keywords": [
    "chatgpt-web",
    "chatgpt",
    "chatbot",
    "vue",
    "monorepo"
  ],
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.30.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:core": "turbo run dev --filter=@chatgpt-web/web --filter=@chatgpt-web/api",
    "dev:web": "turbo run dev --filter=@chatgpt-web/web",
    "dev:api": "turbo run dev --filter=@chatgpt-web/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@chatgpt-web/web",
    "build:api": "turbo run build --filter=@chatgpt-web/api",
    "preview": "turbo run preview --filter=@chatgpt-web/web",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "turbo run quality",
    "quality:fix": "turbo run quality:fix",
    "test": "turbo run test",
    "bootstrap": "pnpm install && pnpm run common:prepare",
    "common:cleanup": "node -e \"const fs=require('node:fs'); fs.rmSync('node_modules',{recursive:true,force:true}); fs.rmSync('pnpm-lock.yaml',{force:true});\"",
    "common:prepare": "husky install",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "biome check --write --no-errors-on-unmatched",
      "prettier --write"
    ],
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "lodash@<4.17.23": "4.17.23",
      "lodash-es@<4.17.23": "4.17.23",
      "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.0",
      "node-domexception": "npm:domexception@^4.0.0",
      "source-map": "^0.7.4"
    }
  }
}
